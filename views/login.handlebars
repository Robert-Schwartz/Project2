<form class="box login-form">
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" placeholder="Your Email" id="email-login">
        </div>
    </div>

    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input" type="password" placeholder="********" id="password-login">
        </div>
    </div>

    <button class="button is-primary">Sign in</button>
</form>

<form class="box signup-form">
    <div class="field">
        <label class="label">First Name</label>
        <div class="control">
            <input class="input" type="firstName" placeholder="First Name" id="firstname-signup">
        </div>
    </div>
    <div class="field">
        <label class="label">Last Name</label>
        <div class="control">
            <input class="input" type="LastName" placeholder="Last Name" id="lastname-signup">
        </div>
    </div>

    <div class="field">
        <label class="label">Username</label>
        <div class="control">
            <input class="input" type="username" placeholder="Username" id="username-signup">
        </div>
    </div>
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" placeholder="Your Email" id="email-signup">
        </div>
    </div>

    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input" type="password" placeholder="********" id="password-signup">
        </div>
    </div>

    <button class="button is-primary">Sign Up!</button>
</form>


<script src="/javascript/login.js"></script>