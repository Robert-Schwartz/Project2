<a href="/popular" class="button is-info is-outlined" id="back-to"> &larr; Back to Popular</a>

<div class="box comments" id="comment-box">
    {{#each this}}
    <article class="media">
        <div class="media-left">
        </div>
        <div class="media-content">
            <div class="content">
                <p>
                    <small>{{user.username}}</small> <small>{{created_at}}</small>
                    <br>
                    {{comment_text}}
                </p>
            </div>
        </div>
    </article>
    {{/each}}
</div>